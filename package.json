{
  "name": "@odms/streamutils",
  "version": "0.3.0",
  "author": "Jakob Hohlfeld <jakob.hohlfeld@netronaut.de>",
  "repository": {
    "url": "git@github.com:open-dms/odms-streamutils.git"
  },
  "description": "A collection of simple stream implementations for building data pipelines.",
  "keywords": [
    "node",
    "utils",
    "streams",
    "pipelines"
  ],
  "license": "MIT",
  "private": false,
  "type": "module",
  "exports": {
    ".": "./packages/core/dist/index.js"
  },
  "engines": {
    "node": ">=20",
    "bun": ">=1.1.5"
  },
  "workspaces": [
    "packages/core",
    "packages/test",
    "examples/example-1"
  ],
  "files": [
    "packages/core/dist",
    "packages/core/src",
    "!packages/core/src/*.spec.ts"
  ],
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "bun run clean && tsc --build",
    "test": "bun test src",
    "test:coverage": "bun run test --coverage",
    "postinstall": "bunx patch-package"
  },
  "devDependencies": {
    "rimraf": "^5.0.5",
    "typescript": "^5.4.5"
  }
}
